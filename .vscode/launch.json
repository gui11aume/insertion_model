{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Python: Run tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Test single file (demo)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/test_demo.py"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Test single case (demo)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/test_demo.py::test_something"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
